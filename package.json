{
	"name": "executor-dev",
	"version": "0.0.29",
	"license": "MIT",
	"description": "A powerful \"short-cutter\" to your console for you and your team!",
	"scripts": {
		"test": "mocha test/*.spec.js --watch -R nyan",
		"test-ci": "mocha test/*.spec.js -R min",
		"test-min": "npm run test-ci --watch",
		"test-docker": "mocha test/docker.js -R min --timeout 150000",
		"coverage": "nyc --reporter=html --reporter=text --reporter=json-summary npm run test-ci --timeout=3000",
		"coverage-ci": "nyc --reporter=html --reporter=text-lcov npm run test-ci | coveralls",
		"bithound": "bithound check git@github.com:crystian/executor.git",
		"test-full": "npm run test-ci && npm run test-docker && npm run coverage",
		"version": "npm run test-full",
		"prepublishOnly": "npm version patch --force && pkg-ok"
	},
	"devDependencies": {
		"chai": "4.1.2",
		"mocha": "5.2.0",
		"nyc": "11.8.0",
		"pkg-ok": "2.2.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run test-ci"
		}
	},
	"nyc": {
		"include": [
			"lib/**/*.js"
		],
		"sourceMap": false,
		"instrument": true,
		"per-file": false,
		"lines": 98,
		"statements": 98,
		"functions": 98,
		"branches": 98,
		"check-coverage": true,
		"include-all-sources": true,
		"cache": true,
		"all": true
	},
	"main": "./bin/e.js",
	"bin": {
		"e": "./bin/e.js"
	},
	"keywords": [
		"executor",
		"shortcut",
		"shortcuts",
		"terminal",
		"console",
		"easy",
		"runner"
	],
	"authors": [
		"Crystian 'pusher' Bietti <crystian@gmail.com> (https://www.linkedin.com/in/crystian)"
	],
	"preferGlobal": true,
	"directories": {
		"lib": "lib",
		"bin": "bin",
		"man": "docs",
		"test": "test"
	},
	"repository": {
		"url": "git+https://github.com/crystian/executor.git",
		"type": "git"
	},
	"homepage": "https://github.com/crystian/executor",
	"bugs": {
		"url": "https://github.com/crystian/executor/issues"
	},
	"engines": {
		"node": ">=8.11.0",
		"npm": ">=5.6.0"
	},
	"dependencies": {
		"update-notifier": "2.5.0"
	}
}
